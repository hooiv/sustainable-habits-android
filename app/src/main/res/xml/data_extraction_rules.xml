<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+.
    Encrypted SharedPreferences files holding session tokens and onboarding state
    are excluded from both cloud backup and device-to-device transfer to prevent
    credential leaks.
    See: https://developer.android.com/about/versions/12/backup-restore
-->
<data-extraction-rules>
    <cloud-backup>
        <exclude domain="sharedpref" path="onboarding.xml" />
        <exclude domain="sharedpref" path="user_session.xml" />
        <!-- Room database is excluded â€” user re-syncs from Firebase on login -->
        <exclude domain="database" path="habit_database" />
    </cloud-backup>
    <device-transfer>
        <exclude domain="sharedpref" path="onboarding.xml" />
        <exclude domain="sharedpref" path="user_session.xml" />
    </device-transfer>
</data-extraction-rules>
